/* pages/order/orderList.wxss */

.ms-info-box {
  background: #fff;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  width: 95%;
  z-index: 2;
  box-shadow: 2px 10px 22px 2px 
  rgba(0, 0, 0, 0.05);
}
.ms-info-box-title{
  padding: 25rpx 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

}


.ms-info-box-body {
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee
}

.info-box{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}

.info-box image{
  width:260rpx;
  max-height:150rpx;
  border-radius: 15rpx;  
}

.info-box view{
  text-align: right;
}

.ms-info-box-title {
  border-bottom: 1px solid #eee
}


.ms-info-box-foot{  
  padding: 25rpx 40rpx;
  display: flex;
  flex-direction: column;
  text-align: right;
}


.foot-top{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
}


.foot-btn-list{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-top:25rpx;
}


.foot-btn{
  border:1px solid #666666;
  color:#666;
  padding:15rpx 20rpx;
  margin-left:25rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
}

.org{
  color:#ec6941;
  border:1px  solid #ec6941;
}
