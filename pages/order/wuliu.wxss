/* pages/order/orderDetail.wxss */
.ms-info-box {
  background: #fff;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  width: 95%;
  z-index: 2;
  box-shadow: 2px 10px 22px 2px 
  rgba(0, 0, 0, 0.05);
}
.ms-info-box-title{
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

}


.ms-info-box-body {
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee
}

.info-box{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}

.info-box image{
  width:260rpx;
  max-height:150rpx;
  border-radius: 15rpx;  
}

.info-box view{
  text-align: right;
}

.ms-info-box-title {
  border-bottom: 1px solid #eee
}

.info-box-text-list{
  display:flex;
  flex-direction: row;
  padding:40rpx 25rpx;
  justify-content: space-between;
  align-items:flex-start;
  border-bottom: 1px solid #eee;
}

.info-box-text{
  display:flex;
  flex-direction: column;
}

.order-box-text-list{
  display:flex;
  flex-direction: column;
  padding:35rpx;  
}

.order-box-text{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.order-box-text text{
  flex:1;
}

.right{
  text-align: right;
}