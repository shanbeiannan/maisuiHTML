/* pages/order/orderDetail.wxss */
.ms-my-bgtop{
  padding:25rpx 0 60rpx 0;
}
.ms-info-box {
  background: #fff;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  width: 95%;
  z-index: 2;
  box-shadow: 2px 10px 22px 2px 
  rgba(0, 0, 0, 0.05);
}
.ms-info-box-title{
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

}


.ms-info-box-body {
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee
}

.info-box{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}

.info-box image{
  width:260rpx;
  max-height:150rpx;
  border-radius: 15rpx;  
}

.info-box view{
  text-align: right;
}

.ms-info-box-title {
  border-bottom: 1px solid #eee
}


.ms-info-box-foot{  
  position: fixed;
  bottom:0;
  z-index: 10;
  padding: 25rpx 0;
  display: flex;
  flex-direction: column;
  text-align: right;
  position:fixed;
  bottom:0;
  background-color:#ffff;
  width:100%;
  height:90rpx;
}


.foot-top{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
}


.foot-btn-list{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  position:fixed;bottom:30rpx;background-color:#ffff;
  z-index: 12;
  right:30rpx;
}


.foot-btn{
  border:1px solid #666666;
  color:#666;
  padding:15rpx 20rpx;
  margin-left:25rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
}

.org{
  color:#ec6941;
  border:1px  solid #ec6941;
}

.info-box-text-list{
  display:flex;
  flex-direction: row;
  padding:40rpx 25rpx;
  justify-content: space-between;
  align-items:flex-start;
  border-bottom: 1px solid #eee;
}

.info-box-text{
  display:flex;
  flex-direction: column;
}

.order-box-text-list{
  display:flex;
  flex-direction: column;
  padding:35rpx;  
}

.order-box-text{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.order-box-text text{
  flex:1;
}

.right{
  text-align: right;
}