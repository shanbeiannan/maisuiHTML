.bg-red,.bg-yellow{
  position: relative;
  background-color:#ec6941;
  border-radius: 30rpx;
  padding:30rpx auto;
  overflow: hidden;
}
.bg-yellow{
  background-color:#ffcd1e;
}
.bg-img{
  position: absolute;
  /* opacity: 0.1; */
  right:60rpx;
  width:305rpx;
  height:180rpx;
  z-index:2;
  bottom:-55rpx;
}

.ms-bank-info{
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  
}

.ms-bank-type{ 
  display: flex;
  flex-direction: row;
  align-items: center;
}

.ms-card-foot{
  width:100%;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
}

.ms-info-box {
  background: #fff;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  width: 95%;
  z-index: 2;
  box-shadow: 2px 10px 22px 2px 
  rgba(0, 0, 0, 0.05);
}

.ms-info-box-title,
.ms-info-box-foot {
  padding: 35rpx 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.ms-info-box-body {
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee
}

.ms-info-box-title {
  border-bottom: 1px solid #eee
}

.ms-info-box-left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
