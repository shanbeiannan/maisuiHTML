.ms-buycard-top {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.ms-buycard-img {
  width: 100%;
  height: 360rpx;
}

.ms-buycard-mark {
  position: absolute;
  border: 1px solid #fff;
  border-radius: 30rpx;
  padding: 5rpx 15rpx 5rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  top: 25rpx;
  right: 25rpx;
  
}

.ms-info-box {
  background: #fff;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  width: 95%;
  z-index: 2;
  box-shadow: 2px 10px 22px 2px 
  rgba(0, 0, 0, 0.05);
}

.ms-info-box-title,
.ms-info-box-foot {
  padding: 35rpx 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.ms-info-box-body {
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee
}

.ms-info-box-title {
  border-bottom: 1px solid #eee
}

.ms-info-box-left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
