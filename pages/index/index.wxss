/**index.wxss**/
page {
  position: relative;
}

.ms-index-title {
  width: 100%;

}

.ms-index-title image {
  width: 100%;
  height: 400rpx;
}

.ms-index-body {

  margin-top: -60rpx;
  border-radius: 20px;
  background-color: #f2f2f2;
  padding: 30rpx 10rpx;
}

.ms-index-top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

}

.ms-index-top-content {
  flex: 1;
  padding: 25rpx;
}

.ms-index-top-left,
.ms-index-top-right {
  display: flex;
  flex-direction: column;
  background-color: #ec6941;
  box-shadow: 2px 10px 18px 0px rgba(236, 105, 65, 0.42);
  border-radius: 20rpx;
  padding: 20rpx 0;
  height: 340rpx;
}

.ms-index-top-right {
  background-color: #ffffff;
  box-shadow: 2px 10px 22px 2px rgba(0, 0, 0, 0.05);
  border-radius: 20rpx;
}

.ms-index-top-title {
  display: flex;
  flex-direction: row;
  padding: 0 25rpx;
}


.ms-index-top-body {
  text-align: center;
  padding: 30rpx 25rpx;
}


.ms-index-bottom {
  margin-top: 30rpx;
}

.banner {
  padding: 0 25rpx;
  height: 200rpx;
}

.banner .banner-contair,
.banner image {
  border-radius: 20rpx;
  height: 200rpx;
}

.banner image {
  width: 100%;
}



.ms-index-top-body-new {
  padding: 30rpx 25rpx;
}


.ms-redBag-toast {
  background-color: #000;
  position: fixed;
  top: 0;
  opacity: 0.3;
}

.ms-redBag-image-con {
  position: fixed;
  top: 0;
  width: 100%;
  margin: auto;
}

.ms-redBag-image {
  position: relative;
  margin:140rpx auto;
  width: 500rpx;
  height: 800rpx;
}

.ms-redBag-luky {
  position: relative;
  margin: 0 auto;
}

.ms-redBag-image .ms-hongbao-image {
  margin-top: 100rpx;
  width: 500rpx;
  height: 235rpx;
  z-index: 10;
  margin: 0 auto;
}


.ms-hongbao-image-left,.ms-hongbao-image-right{
  position: absolute; 
  z-index: 10;
}
.ms-hongbao-image-left{
  width:100rpx ;
  height:100rpx;  
  left:-65rpx;
  top:160rpx;
}
.ms-hongbao-image-right{
  width:80rpx ;
  height:80rpx;  
  right:-50rpx;
  top:360rpx;
}

.ms-redBag-luky .ms-hongbao-image {
  margin-top: 100rpx;
  width: 750rpx;
  height: 560rpx;
}

.ms-hongbao-on-info-t {
  position: absolute;
  width: 100%;
  height: 100rpx;
  top: 60rpx;
  left: 0; 
  text-align: center;
  z-index: 10; 
}

.ms-hongbao-on-info {
  position: absolute;
  width: 100%;
  display: flex;
  top: 230rpx;
  left: 0;
  flex-direction: column;
  align-content: center;
  text-align: center;
  z-index: 0; 
 
}
.ms-redBag-image .ms-hongbao-on-info {
  background-color: #fc3939;
  border-bottom-right-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}
.ms-redBag-luky .ms-hongbao-on-info {
  top: 265rpx;
}

.ms-redbag-mongy {
  color: #ffe387;
  font-size: 70rpx;
  font-weight: blod;
  padding:40rpx 0 80rpx;
}

.ms-rbg-bottom {
  
  width: 100%;
  position: abslout;
  border-bottom-right-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
 
}
.ms-rbg-bottom-content{
  width:500rpx;
  margin:0 auto;
  left:5rpx;
  padding:30rpx 0;
  background-color: #000;
  border-top:1px dotted #fff;
  text-align: center;
  border-bottom-right-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}

.ms-btn-box-bg {
  position: relative;
  margin: 0 auto;
  width: 100%;
  height: 200rpx;
}

.ms-redBag-luky .ms-btn-box-bg {
  height: 90rpx;

}

.ms-hongbao-btn.blue,
.ms-hongbao-btn.yellow {
  position: absolute;
  width: 300rpx;
  left: 50%;
  margin-left: -180rpx;
  font-size: 24rpx;
  color: #FFF;
  display: block;
  border-radius: 40rpx;
  border: solid 1px #497df1;
  background: #497df1;
  text-align: center;
  padding: 15rpx 30rpx;
  transition: all 0.01s;
  box-shadow: 0 10rpx 0 #1b4ebf;
}

.ms-hongbao-btn.blue:active {
  box-shadow: 0 0 0 #1b4ebf;
  position: absolute;
  top: 10rpx;
}

.ms-hongbao-btn.yellow {
  top: 110rpx;
  border: solid 1px #ffd100;
  background: #ffd100;
  box-shadow: 0 10rpx 0 #f39800;
}

.ms-redBag-luky .ms-hongbao-btn.yellow {
  top: 0rpx;
}

.ms-hongbao-btn.yellow:active {
  position: absolute;
  box-shadow: 0 0 0 #f39800;
  top: 120rpx;
}

.ms-redBag-luky .ms-hongbao-btn.yellow:active {
  top: 10rpx;
}

.ms-bottom {
  padding: 20rpx;
}



.ms-quan-box{
  height:180rpx;
  text-align: center;
}
.ms-quan-box-top{
  padding-top:70rpx;
}
.ms-quan-box-bottom{
  margin-top: 20rpx;
}