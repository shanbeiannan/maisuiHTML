/**index.wxss**/
page {
  position: relative;
}

.ms-index-title {
  width: 100%;

}

.ms-index-title image {
  width: 100%;
  height: 400rpx;
}

.ms-index-body {

  margin-top: -60rpx;
  border-radius: 20px;
  background-color: #f2f2f2;
  padding: 30rpx 10rpx;
}

.ms-index-top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

}

.ms-index-top-content {
  flex: 1;
  padding: 25rpx;
}

.ms-index-top-left,
.ms-index-top-right {
  display: flex;
  flex-direction: column;
  background-color: #ec6941;
  box-shadow: 2px 10px 18px 0px rgba(236, 105, 65, 0.42);
  border-radius: 20rpx;
  padding: 20rpx 0;
  height: 340rpx;
}

.ms-index-top-right {
  background-color: #ffffff;
  box-shadow: 2px 10px 22px 2px rgba(0, 0, 0, 0.05);
  border-radius: 20rpx;
}

.ms-index-top-title {
  display: flex;
  flex-direction: row;
  padding: 0 25rpx;
}


.ms-index-top-body {
  text-align: center;
  padding: 30rpx 25rpx;
}


.ms-index-bottom {
  margin-top: 30rpx;
}

.banner {
  padding: 0 25rpx;
  height: 200rpx;
}

.banner .banner-contair,
.banner image {
  border-radius: 20rpx;
  height: 200rpx;
}

.banner image {
  width: 100%;
}



.ms-index-top-body-new {
  padding: 30rpx 25rpx;
}


.ms-redBag-toast {
  background-color: #000;
  position: fixed;
  top: 0;
  opacity: 0.3;
}

.ms-redBag-image-con {
  position: fixed;
  top: 0;
  left: 0;
}

.ms-redBag-image {
  position: relative;
  margin: auto;
  width: 80%;
  height: 80%;
}

.ms-redBag-image .ms-hongbao-image {
  margin-top: 100rpx;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.ms-hongbao-on-info{
 
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  top:200rpx;
  left:0;
  flex-direction: column;
  align-content: center;  
  text-align: center;
  z-index: 10;
}
.ms-redbag-mongy{
  color:#ffe387;
  font-size:80rpx;
  font-weight: blod;
  padding:150rpx 0 40rpx;
}

.ms-btn-box-bg{
  position: relative;
  margin: 0 auto;
  width:100%;
  height:200rpx;
}

.ms-hongbao-btn.blue, .ms-hongbao-btn.yellow{   
  position: absolute;
  width:300rpx;
  left:50%;
  margin-left:-180rpx;
  font-size: 30rpx;
  color: #FFF;
  display: block; 
  border-radius: 40rpx;
  border: solid 1px #497df1;
  background: #497df1;
  text-align: center;
  padding: 20rpx 30rpx;
  transition: all 0.01s;
  box-shadow: 0px 4px 0px #1b4ebf;
}
.ms-hongbao-btn.blue:active {
  box-shadow: 0px 0px 0px #1b4ebf; 
  position: absolute;
  top: 2rpx;
}
.ms-hongbao-btn.yellow{
  top:110rpx;
  border: solid 1px #ffd100;
  background: #ffd100;
  box-shadow: 0px 4px 0px #f39800;
}
.ms-hongbao-btn.yellow:active{
  position: absolute;
  box-shadow: 0px 0px 0px #f39800; 
  top: 112rpx;
}
.ms-bottom{  
  padding: 20rpx;
}