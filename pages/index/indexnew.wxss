/* pages/index/indexnew.wxss */
.ms-box-radius {
  margin-top: -60px;
  position: relative;
  width: 100%;

}

.ms-box-money-image {
  position: absolute;
  z-index: 10;
  width: 220rpx;
  height: 220rpx;
  top: 380rpx;
  left: 50%;
  margin-left: -110rpx;
}

.ms-index-box {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 10;
}


.ms-index-box-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 35rpx 20rpx 50rpx;
}


.left {
  display: flex;
  flex-direction: row;
  background-color: #ffed91;
  padding: 8rpx 25rpx;
  border-radius: 30rpx;
  align-items: center;
}

.right {
  background-color: #fbe9dc;
  font-size: 24rpx;
  padding: 8rpx 25rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}

.ms-index-box-middle {
  text-align: center;
}


.ms-index-box-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  justify-items: centert;
  padding: 30rpx 50rpx 0;
}

.line-list {
  position: absolute;
  border: 1px dotted #ffd12d;
  width: 75%;
  top: 260rpx;
  left: 100rpx;
  z-index: 8;
}

.ms-mark-content {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-items: center;
  justify-content: center;
}

.top-content,
.day {
  background-color: #e32e10;
  border-radius: 20rpx;
  color: #fff;
  padding: 5rpx 10rpx;
}

.top-content-mark {
  width: 0;
  height: 0;
  border-width: 10rpx;
  border-style: solid;
  border-color: #e32e10 transparent transparent transparent;
  margin-bottom: 10rpx;
}

.will {
  opacity: 0;
}

.middle-mark {
  opacity: 0.9;
}

.day {
  background-color: transparent;
  color: #666;
}

.text-mark{
  position: absolute;
  top:660rpx;
  right:25rpx
}



.ms-box-index-content {
  background-color: #e32e10;
  box-shadow: 0px 5rpx 21rpx 0px rgba(227, 46, 16, 0.64);
  border-radius: 30rpx;
  width: 95%;
  padding: 30rpx 0;
  margin: 100rpx auto 30rpx auto;
}

.ms-box-index-content-title {
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 20rpx;
  align-items: flex-end;
}

.ms-box-index-content-content {
  width: 95%;
  background-color: #fff2e5;
  box-shadow: 2px 9px 0px 0px rgba(212, 27, 7, 0.63);
  border-radius: 30rpx;
  padding: 30rpx 0;
  margin: 20rpx auto 40rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.border-l {
  border-left: 1px dotted #ffdebe;
}

.border-r {
  border-right: 1px dotted #ffdebe;
}

.ms-box-index-content-content .ms-money {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 10rpx 25rpx;
  text-align: left;
  margin-bottom: 50rpx;
}

.ms-btn-box-bg-list.downl {
  top: 380rpx
}

.yellow {
  color: #6a3906 !important;
}



.ms-box-index-content-image {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 25rpx;
}

.ms-image-list {
  border-radius: 30rpx;
  flex: 0.48;

}

.ms-image-list image {
  width: 100%;
  height: 180rpx;
  border-radius: 30rpx;
}